---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Sidebar from '../../components/Sidebar.astro';

export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  return projectEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { slug } = Astro.params;
// Sort projects based on featured list to maintain consistent navigation order
const allProjects = await getCollection('projects');
const homepageSettings = await getEntry('homepage', 'settings');
const featuredProjects = homepageSettings?.data.featuredProjects || [];

const sortedProjects = [...allProjects].sort((a, b) => {
  const indexA = featuredProjects.indexOf(a.slug);
  const indexB = featuredProjects.indexOf(b.slug);
  if (indexA !== -1 && indexB !== -1) return indexA - indexB;
  if (indexA !== -1) return -1;
  if (indexB !== -1) return 1;
  return 0;
});

const currentIndex = sortedProjects.findIndex(p => p.slug === slug);
const prevProject = currentIndex > 0 ? sortedProjects[currentIndex - 1] : null;
const nextProject = currentIndex < sortedProjects.length - 1 ? sortedProjects[currentIndex + 1] : null;

// Determine alignment class
const entry = Astro.props.entry || (slug ? await getEntry("projects", slug) : undefined);
if (!entry) return Astro.redirect("/404");

const alignment = entry.data.contentAlignment || 'center';
const containerClass = {
    'center': 'max-w-4xl mx-auto',
    'left': 'max-w-4xl mr-auto ml-0',
    'wide': 'max-w-6xl mx-auto'
}[alignment];

const { Content } = await entry.render();
import Video from '../../components/mdx/Video.astro';
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <div class="flex flex-col lg:flex-row gap-6 h-full">
    <!-- Hide Sidebar on Mobile as requested -->
    <div class="hidden lg:block h-full shrink-0">
        <Sidebar />
    </div>
    
    <div class="flex-1 min-w-0">
      <div class="glass-panel rounded-3xl p-6 md:p-8 h-full overflow-y-auto custom-scrollbar">
        
        <!-- Back Button -->
        <div class="mb-6">
            <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-white/50 hover:text-white transition-colors group">
                <div class="p-2 rounded-full bg-white/5 border border-white/10 group-hover:bg-white/10 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                </div>
                Back to Projects
            </a>
        </div>

        <article class={`${containerClass}`}>
          <div class="mb-8 border-b border-white/10 pb-8">
              <span class="inline-block px-3 py-1 rounded-full bg-white/10 border border-white/20 text-xs font-semibold tracking-wider uppercase text-white mb-4">
                {entry.data.category}
              </span>
              <h1 class="text-3xl md:text-5xl font-bold mt-2 text-white font-display leading-tight">{entry.data.title}</h1>
              <p class="text-lg md:text-xl text-white/85 mt-4 leading-relaxed">{entry.data.description}</p>
          </div>
          
          <div class="prose prose-lg prose-invert max-w-none prose-headings:font-display prose-a:text-blue-400">
            <Content components={{ VideoPlayer: Video }} />
          </div>

          <!-- Project Navigation -->
          <div class="mt-16 pt-8 border-t border-white/10 grid grid-cols-2 gap-4">
            {prevProject ? (
              <a href={`/projects/${prevProject.slug}`} class="flex flex-col gap-1 group text-left">
                <span class="text-xs text-white/40 uppercase tracking-wider font-semibold group-hover:text-white/60 transition-colors flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                  Previous
                </span>
                <span class="text-base font-bold text-white group-hover:text-blue-400 transition-colors line-clamp-1">
                  {prevProject.data.title}
                </span>
              </a>
            ) : (
                <div /> /* Empty placeholder */
            )}

            {nextProject ? (
              <a href={`/projects/${nextProject.slug}`} class="flex flex-col gap-1 group text-right items-end">
                <span class="text-xs text-white/40 uppercase tracking-wider font-semibold group-hover:text-white/60 transition-colors flex items-center gap-1">
                  Next
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
                <span class="text-base font-bold text-white group-hover:text-blue-400 transition-colors line-clamp-1">
                  {nextProject.data.title}
                </span>
              </a>
            ) : (
                <div /> 
            )}
          </div>

        </article>
      </div>
    </div>
  </div>

  <style is:global>
    /* Force spacing and 4px border radius between images in the project content */
    .prose img {
      margin-top: 1.5rem !important;
      margin-bottom: 1.5rem !important;
      display: block;
      border-radius: 4px !important;
    }
  </style>
</BaseLayout>
